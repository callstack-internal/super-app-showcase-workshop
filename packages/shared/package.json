{
  "name": "shared",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start --port 9007",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "bundle": "pnpm bundle:ios && pnpm bundle:android",
    "bundle:ios": "react-native bundle --platform ios --entry-file index.js --dev false",
    "bundle:android": "react-native bundle --platform android --entry-file index.js --dev false",
    "align-deps": "rnx-align-deps --write",
    "check-deps": "rnx-align-deps"
  },
  "dependencies": {
    "@module-federation/enhanced": "0.13.1",
    "react": "19.0.0",
    "react-native": "0.78.2",
    "zustand": "5.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@callstack/repack": "5.1.0",
    "@react-native-community/cli": "15.0.1",
    "@react-native/babel-preset": "0.78.2",
    "@react-native/eslint-config": "0.78.2",
    "@react-native/typescript-config": "0.78.2",
    "@rnx-kit/align-deps": "^2.5.1",
    "@rspack/core": "^1.3.10",
    "@swc/helpers": "^0.5.17",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^8.57.0",
    "jest": "^29.6.3",
    "prettier": "^2.8.8",
    "react-test-renderer": "^19.0.0",
    "super-app-showcase-sdk": "0.0.2",
    "typescript": "^5.6.3"
  },
  "rnx-kit": {
    "kitType": "app",
    "alignDeps": {
      "presets": [
        "./node_modules/super-app-showcase-sdk/preset"
      ],
      "requirements": [
        "super-app-showcase-sdk@0.0.2"
      ],
      "capabilities": [
        "super-app"
      ]
    }
  }
}
